{
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": [ "string" ] },
    { "open": "/**", "close": " */", "notIn": [ "string" ] }
  ],
  "brackets": [
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ]
  ],
  "comments": {
    "lineComment": "//",
    "blockComment": [ "/*", "*/" ]
  },
  "surroundingPairs": [
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ],
    [ "'", "'" ],
    [ "\"", "\"" ],
    [ "`", "`" ]
  ]
}
