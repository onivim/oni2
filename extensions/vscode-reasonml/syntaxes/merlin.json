{
  "scopeName": "source.ocaml.merlin",
  "fileTypes": [
    "merlin"
  ],
  "patterns": [
    { "include": "#comment" },
    { "include": "#directory" },
    { "include": "#flag" },
    { "include": "#package" }
  ],
  "repository": {
    "comment": {
      "begin": "#",
      "end": "$",
      "name": "comment.line"
    },
    "directory": {
      "begin": "\\b(B|S)\\b",
      "end": "$",
      "beginCaptures": {
        "1": { "name": "keyword.other" }
      },
      "patterns": [
        {
          "match": "(?<![\\-\\+])(?:(\\b[-[:word:]]+\\b)|([\\.*]+))[[:space:]]*([\\./])?",
          "captures": {
            "1": { "name": "string.double" },
            "2": { "name": "constant.language" },
            "3": { "name": "keyword.other" }
          }
        }
      ]
    },
    "flag": {
      "begin": "\\b(FLG)\\b",
      "end": "$",
      "beginCaptures": {
        "1": { "name": "keyword.other" }
      },
      "patterns": [
        {
          "match": "([\\-\\+])\\b(?:([[:digit:]]+)|([[:lower:]][[:word:]]*))\\b",
          "captures": {
            "1": { "name": "keyword.other" },
            "2": { "name": "constant.language" },
            "3": { "name": "variable.parameter" }
          }
        }
      ]
    },
    "package": {
      "begin": "\\b(PKG)\\b",
      "end": "$",
      "beginCaptures": {
        "1": { "name": "storage.type" }
      },
      "patterns": [
        {
          "match": "(?<![\\-\\+])\\b([[:lower:]][[:word:]]*)\\b[[:space:]]*(\\.)?",
          "captures": {
            "1": { "name": "entity.name.class" },
            "2": { "name": "keyword.other" }
          }
        }
      ]
    }
  }
}
